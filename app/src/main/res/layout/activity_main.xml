<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29CBDA"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="303dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="34dp"
        android:padding="6dp"
        android:text="Select Your Vehicles Information"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_make"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textview_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:padding="6dp"
        android:text=""
        android:textColor="#555555"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="313dp" />

    <Spinner
        android:id="@+id/spinner_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_make"
        android:minHeight="48dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/textview_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_make"
        android:padding="6dp"
        android:text=""
        android:textColor="#555555"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="472dp" />

    <Spinner
        android:id="@+id/spinner_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_model"
        android:minHeight="48dp"
        tools:layout_editor_absoluteY="539dp" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_below="@id/spinner_model"
        android:layout_centerHorizontal="true"

        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Submit Vehicle"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="642dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="316dp"
        android:layout_height="168dp"

        android:layout_marginStart="47dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/welcome_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        app:srcCompat="@drawable/vacpm_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>